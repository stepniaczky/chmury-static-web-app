{
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/",
      "statusCode": 301
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout/?post_logout_redirect_uri=/",
      "statusCode": 301
    },
    {
      "route": "/admin",
      "redirect": "api/docs",
      "statusCode": 301,
      "allowedRoles": ["admin"]
    },

    {
      "route": "api/appointments",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "api/appointments",
      "methods": ["POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "api/appointments/{id}",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "api/appointments/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "api/appointments/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["admin"]
    },

    {
      "route": "api/barber_locations",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barber_locations",
      "methods": ["POST"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barber_locations/{id}",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barber_locations/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barber_locations/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["admin"]
    },


    {
      "route": "api/barber_services",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barber_services",
      "methods": ["POST"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barber_services/{id}",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barber_services/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barber_services/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["admin"]
    },


    {
      "route": "api/barbers",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barbers",
      "methods": ["POST"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barbers/{id}",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/barbers/{id}",
      "methods": ["PUT"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "api/barbers/{id}",
      "methods": ["DELETE"],
      "allowedRoles": ["admin"]
    }


  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/static/media/*.{png,jpg,jpeg,gif,bmp}", "/static/css/*"]
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/5ec8d193-0058-4080-a678-959e9d81d615",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  }
}
